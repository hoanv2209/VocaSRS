@model ParagraphRequestModel

<form method="post" asp-controller="Paragraph" asp-action="Add" autocomplete="off">
    <div class="form-group pb-3">
        <label>Tiêu đề</label>
        <input type="text" class="form-control" asp-for="Title" autofocus>
    </div>
    <div class="form-group pb-3">
        <label>Nội dung</label>
        <textarea class="form-control" asp-for="Content" rows="10"></textarea>
    </div>
    <div class="form-group pb-3">
        <label>File Mp3</label>
        <input type="text" class="form-control" asp-for="FileName" autofocus>
    </div>
    <button type="submit" class="btn btn-primary">Thêm</button>
</form>