<table id="mainGrid" class="table table-striped table-bordered dt-responsive nowrap" width="100%" cellspacing="0">
    <thead>
        <tr>
            <th>Native Word</th>
            <th>Foreign Word</th>
            <th>Sentence</th>
            <th>Edit</th>
            <th>Delete</th>
        </tr>
    </thead>
</table>

@section Scripts
    {
    <script>
        $(document).ready(function() {
            $("#mainGrid").DataTable({
                "processing": true, // for show progress bar
                "serverSide": true, // for process server side
                "filter": true, // this is for disable filter (search box)
                "orderMulti": false, // for disable multiple column at once
                "pageLength": 15,
                "ajax": {
                    "url": "/Vocabulary/Load",
                    "type": "POST",
                    "datatype": "json"
                },

                "columnDefs":
                [
                    {
                        "targets": [0],
                        "orderable": true
                    },
                    {
                        "targets": [1],
                        "searchable": false,
                        "orderable": false
                    },
                    {
                        "targets": [2],
                        "searchable": false,
                        "orderable": false
                    },
                    {
                        "targets": [3],
                        "searchable": false,
                        "orderable": false
                    },
                    {
                        "targets": [4],
                        "searchable": false,
                        "orderable": false
                    }
                ],

                "columns": 
                [
                    { "data": "NativeWord", "name": "NativeWord", "autoWidth": true },
                    { "data": "ForeignWord", "name": "ForeignWord", "autoWidth": true },
                    { "data": "Sentence", "name": "Sentence", "autoWidth": true },
                    {
                        "render": function(data, type, full, meta) { return '<a class="btn btn-info" href="/Vocabulary/Edit/' + full.WordId + '">Edit</a>'; }
                    },
                    {
                        data: null, render: function(data, type, row) {
                            return "<a href='#' class='btn btn-danger' onclick=Delete('" + row.WordId + "'); >Delete</a>";
                        }
                    },

                ],
                "buttons": 
                [
                    {
                        text: 'Reload',
                        action: function(e, dt, node, config) {
                            dt.ajax.reload();
                        }
                    }
                ]

            });
        });
    </script>
}